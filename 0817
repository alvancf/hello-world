import React, { useRef } from 'react';
import { FlatList, Text, View, StyleSheet, TouchableOpacity } from 'react-native';

const data = {
  store: {
    bottomSelector: [
      { id: 1, name: 'Item 1' },
      { id: 2, name: 'Item 2' },
      { id: 3, name: 'Item 3' },
      { id: 4, name: 'Item 4' },
      { id: 5, name: 'Item 5' },
    ],
    currentBottomItem: null,
  },
};

const renderItem = ({ item, index }) => (
  <View style={styles.itemContainer}>
    <Text>{item.name}</Text>
  </View>
);

const TestFlatList = () => {
  const flatListRef = useRef(null);
//   const nativeRef = useRef<any>(null);

  const scrollToIndex = (index: number) => {
    try {
      flatListRef.current?.scrollToIndex({ index: index, viewPosition: 0.5 });
    } catch (e) {
      console.error('scrollToIndex error ' + JSON.stringify(e));
    }
  };

  return (
    <View style={styles.container}>
      <FlatList
        ref={flatListRef}
        keyExtractor={(_item, index) => index + ''}
        style={styles.list}
        showsHorizontalScrollIndicator={false}
        horizontal={true}
        data={data.store.bottomSelector}
        extraData={data.store.currentBottomItem}
        renderItem={renderItem}
        initialScrollIndex={0}
      />
      <TouchableOpacity onPress={() => scrollToIndex(3)}>
        <Text>点击我滚动到索引为 3 的位置</Text>
      </TouchableOpacity>
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
  },
  list: {
    height: 100,
  },
  itemContainer: {
    width: 100,
    height: 80,
    backgroundColor: 'lightblue',
    alignItems: 'center',
    justifyContent: 'center',
    marginRight: 10,
  },
});

export default TestFlatList;
